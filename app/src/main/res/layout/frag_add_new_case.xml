<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_round_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/shape_round_color_primary">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:adjustViewBounds="true"
                            android:padding="7dp"
                            android:tint="@color/white"
                            android:src="@drawable/ic_calender" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvLastDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/font_regular"
                        android:gravity="start|center"
                        android:hint="@string/last_date"
                        android:textColor="@color/black"
                        android:textColorHint="#cacaca"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_round_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/shape_round_color_primary">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:adjustViewBounds="true"
                            android:padding="7dp"
                            android:tint="@color/white"
                            android:src="@drawable/ic_calender" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvNextDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/font_regular"
                        android:gravity="start|center"
                        android:hint="@string/next_date"
                        android:textColor="@color/black"
                        android:textColorHint="#cacaca"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_round_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/shape_round_color_primary">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:adjustViewBounds="true"
                            android:padding="7dp"
                            android:tint="@color/white"
                            android:src="@drawable/ic_case_type" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtCaseNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/font_regular"
                        android:gravity="start|center"
                        android:hint="@string/cash_type_no"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="#cacaca"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_round_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/shape_round_color_primary">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:adjustViewBounds="true"
                            android:padding="7dp"
                            android:tint="@color/white"
                            android:src="@drawable/ic_court" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtCourtNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/font_regular"
                        android:gravity="start|center"
                        android:hint="@string/court_room_no"
                        android:inputType="text"
                        android:textColor="@color/black"
                        android:textColorHint="#cacaca"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/shape_round_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/shape_round_color_primary">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:adjustViewBounds="true"
                        android:padding="7dp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_court" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edtCourt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/font_regular"
                    android:gravity="start|center"
                    android:hint="@string/court"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="#cacaca"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/shape_round_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/shape_round_color_primary">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:adjustViewBounds="true"
                        android:padding="7dp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_party" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edtPartyName1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/font_regular"
                    android:gravity="start|center"
                    android:hint="@string/party_name_1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="#cacaca"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/shape_round_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/shape_round_color_primary">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:adjustViewBounds="true"
                        android:padding="7dp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_party" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edtAdvocateParty1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/font_regular"
                    android:gravity="start|center"
                    android:hint="@string/advocate_party_1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="#cacaca"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/shape_round_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/shape_round_color_primary">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:adjustViewBounds="true"
                        android:padding="7dp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_party" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edtPartyName2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/font_regular"
                    android:gravity="start|center"
                    android:hint="@string/party_name_2"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="#cacaca"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/shape_round_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/shape_round_color_primary">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:adjustViewBounds="true"
                        android:padding="7dp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_party" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edtAdvocateParty2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/font_regular"
                    android:gravity="start|center"
                    android:hint="@string/advocate_party_2"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="#cacaca"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/shape_round_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/shape_round_color_primary">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:adjustViewBounds="true"
                        android:padding="7dp"
                        android:src="@drawable/ic_case_type"
                        android:tint="@color/white" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edtStages"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/font_regular"
                    android:gravity="start|center"
                    android:hint="@string/stages"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="#cacaca"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:orientation="horizontal">

                <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                    android:id="@+id/ccpCountryCode"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_round_white"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    app:ccp_backgroundColor="@color/white"
                    app:ccp_defaultCode="91"
                    app:ccp_defaultNameCode="IN"
                    app:ccp_hideNameCode="true"
                    app:ccp_keyboardAutoPopOnSearch="true"
                    app:ccp_selectionDialogShowSearch="true"
                    app:ccp_showFlag="false"
                    app:ccp_textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/shape_round_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/shape_round_color_primary">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:adjustViewBounds="true"
                            android:padding="7dp"
                            android:src="@drawable/ic_phone"
                            android:tint="@color/white" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/font_regular"
                        android:gravity="start|center"
                        android:hint="@string/mobile_no"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColor="@color/black"
                        android:textColorHint="#cacaca"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:orientation="horizontal">

                <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                    android:id="@+id/ccpCountryCodeW"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_round_white"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    app:ccp_backgroundColor="@color/white"
                    app:ccp_defaultCode="91"
                    app:ccp_defaultNameCode="IN"
                    app:ccp_hideNameCode="true"
                    app:ccp_keyboardAutoPopOnSearch="true"
                    app:ccp_selectionDialogShowSearch="true"
                    app:ccp_showFlag="false"
                    app:ccp_textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/shape_round_white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@drawable/shape_round_color_primary">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:adjustViewBounds="true"
                            android:padding="7dp"
                            android:src="@drawable/ic_whatsapp"
                            android:tint="@color/white" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtWhatsAppMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/font_regular"
                        android:gravity="start|center"
                        android:hint="@string/whatsapp_mobile_no"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColor="@color/black"
                        android:textColorHint="#cacaca"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/shape_round_white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/shape_round_color_primary">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:adjustViewBounds="true"
                        android:padding="7dp"
                        android:src="@drawable/ic_email_"
                        android:tint="@color/white" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/font_regular"
                    android:gravity="start|center"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="#cacaca"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="12dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_round_color_primary_border"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvClear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_round_color_primary_border"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="@string/clear"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="12dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50">

                    <TextView
                        android:id="@+id/tvUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/shape_round_color_primary_border"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="@string/update"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>